# Server configuration
MCP_SERVER_NAME="StatCan Data"
MCP_SERVER_VERSION="0.1.0"
MCP_SERVER_HOST="127.0.0.1"
MCP_SERVER_PORT=5000

# Cache configuration
CACHE_DIRECTORY="./cache"
METADATA_CACHE_MAX_SIZE=1000
DATA_CACHE_MAX_SIZE=500
CACHE_EXPIRY_SECONDS=86400  # 24 hours

# StatCan WDS API configuration
STATCAN_API_BASE_URL="https://www150.statcan.gc.ca/t1/wds"
STATCAN_API_RATE_LIMIT=25  # Requests per second
STATCAN_API_TIMEOUT=30  # Seconds

# Logging configuration
LOG_LEVEL="INFO"  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FILE="./logs/mcp-statcan.log"